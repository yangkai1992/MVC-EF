<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net"/>
  </configSections>

  <log4net debug="true">
    <appender name="RollingLogFileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="E:/Log/"></file>
      <appendToFile value="true"></appendToFile>
      <rollingStyle value="date"></rollingStyle>
      <maxSizeRollBackups value="100"></maxSizeRollBackups>
      <staticLogFileName value="false"></staticLogFileName>

      <datePattern value="yyyy-MM-dd&quot;.log&quot;"></datePattern>
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%n[%d{yyyy-MM-dd HH:mm:ss}]  %p%n日志类：%c{2}方法：%M%n内容：%m%n" />
      </layout>
    </appender>
    
    <root>
      <level value="DEBUG"></level>
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
</configuration>