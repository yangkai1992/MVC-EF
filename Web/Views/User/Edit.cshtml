@model Model.User

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-body">
                    <p>基本信息</p>
                    <div class="col-md-10">
                        <div class="form-horizontal">
                            <table class="editing-tab table-2-column">
                                <tr>
                                    <th><label class="control-label">用户名：</label></th>
                                    <td><input class="form-control" value="@Model.UserName" /></td>
                                    <th><label class="control-label">账号：</label></th>
                                    <td><input class="form-control" value="@Model.Account" /></td>
                                </tr>
                                <tr>
                                    <th><label class="control-label">邮箱：</label></th>
                                    <td><input class="form-control" value="@Model.Email"/></td>
                                    <th><label class="control-label">注册时间：</label></th>
                                    <td><label class="control-label">@Model.CreateTime.ToString("yyyy-MM-dd hh:mm")</label></td>
                                </tr>
                                <tr>
                                    <th><label class="control-label">手机号：</label></th>
                                    <td><input class="form-control" value="" /></td>
                                    <th></th>
                                    <td></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <img class="profile-user-img img-responsive img-circle" src="~/Content/DefaultImage/user4-128x128.jpg" />
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>