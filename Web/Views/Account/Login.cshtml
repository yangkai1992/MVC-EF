@model User

<section>
    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Account, new { @class="col-sm-offset-4 col-sm-1 control-label"})
            <div class="col-sm-2" style="padding-left:0px">
                @Html.TextBoxFor(m => m.Account, new { @class = "form-control" })
                @Html.ValidationMessageFor(m=>m.Account)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-offset-4 col-sm-1 control-label" })
            <div class="col-sm-2" style="padding-left:0px">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2" style="margin-left:44%">
                <button type="submit" class="btn btn-primary">注册</button>
            </div>
        </div>
    }
</section>