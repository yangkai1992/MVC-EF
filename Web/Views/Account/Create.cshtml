@model Model.User
<section ng-app="registrar" style="padding-top:180px">
    <form class="form-horizontal" role="form" ng-controller="registrarController">
        <div class="form-group">
            <label for="account" class="col-sm-offset-4 col-sm-1 control-label" style="padding-right:0px">账号：</label>
            <div class="col-sm-2" style="padding-left:0px">
                <input type="text" class="form-control" id="account" ng-model="account" placeholder="请输入账号" />
            </div>
        </div>
        <div class="form-group">
            <label for="passWord" class="col-sm-offset-4 col-sm-1 control-label" style="padding-right:0px">密码：</label>
            <div class="col-sm-2" style="padding-left:0px">
                <input type="text" class="form-control" id="passWord" ng-model="passWord" placeholder="请输入密码" />
            </div>
        </div>
        <div class="form-group">
            <label for="nickName" class="col-sm-offset-4 col-sm-1 control-label" ng-model="nickName" style="padding-right:0px">昵称：</label>
            <div class="col-sm-2" style="padding-left:0px">
                <input type="text" class="form-control" id="nickName" placeholder="请输入昵称" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-2" style="margin-left:44%">
                <button type="submit" ng-click="submit()" class="btn btn-primary">注册</button>
            </div>
        </div>
    </form>
</section>
