<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,user-scalable=no" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/angular")
</head>
<body class="skin-blue-light">
    <div class="wrapper">
        <header class="main-header">
            <nav class="navbar navbar-static-top" role="navigation">
                <div class="container-fluid">
                    <div>
                        <ul class="nav navbar-nav navbar-left">
                            <li><a href=@Url.Content("~/Home/Index")><span class="glyphicon glyphicon-home"></span> 主页</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> 登录</a></li>
                        </ul>
                    </div>
                    <div>
                        <ul class="nav navbar-nav navbar-right">
                            <li><a href=@Url.Content("~/Account/Create")><span class="glyphicon glyphicon-user"></span> 注册</a></li>
                            <li><a href="#"><span class="glyphicon glyphicon-log-in"></span> 登录</a></li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div>
            @RenderBody()
        </div>
        <footer class="main-footer">
            <div class="col-md-offset-5 hidden-xs">
                <b>Version</b> 2.0
            </div>
        </footer>
    </div>
</body>
</html>
